{
  "expo": {
    "name": "Shepot",
    "slug": "shepot",
    "version": "1.2.5",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shepot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shepot.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Shepot needs access to your photos to share images in chats",
        "NSCameraUsageDescription": "Shepot needs access to your camera to take photos",
        "NSMicrophoneUsageDescription": "Shepot needs access to your microphone to record voice messages"
      }
    },
    "android": {
      "package": "com.shepot.app",
      "versionCode": 14,
      "adaptiveIcon": {
        "backgroundColor": "#0088CC",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0088CC",
          "dark": {
            "backgroundColor": "#1F2123"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "Shepot needs access to your photos to share images in chats",
          "cameraPermission": "Shepot needs access to your camera to take photos"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Shepot needs access to your photos to save images",
          "savePhotosPermission": "Shepot needs permission to save photos to your gallery"
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Shepot needs access to your microphone to record voice messages"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#0088CC",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "c141291e-6c42-42d0-bb12-f47e6fe16f2b"
      }
    },
    "owner": "aleksandr89"
  }
}
